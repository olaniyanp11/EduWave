<%- include('./partials/header') %>

<div class="min-h-screen flex items-center justify-center bg-gray-100 px-4">
  <div class="w-full max-w-md bg-white p-8 rounded-lg shadow-lg">
    <h2 class="text-3xl font-bold text-center text-[#22664e] mb-6">Register as Instructor</h2>

    <form action="/register/instructor" method="POST" class="space-y-5">
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Full Name</label>
        <input type="text" name="name" required class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-[#22664e] focus:outline-none" />
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
        <input type="email" name="email" required class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-[#22664e] focus:outline-none" />
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Password</label>
        <input type="password" name="password" required class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-[#22664e] focus:outline-none" />
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Confirm Password</label>
        <input type="password" name="confirmPassword" required class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-[#22664e] focus:outline-none" />
      </div>

      <input type="hidden" name="role" value="instructor" />

      <button type="submit" class="w-full bg-[#22664e] text-white py-2 rounded-md hover:bg-green-700 transition">
        Register
      </button>
    </form>

    <p class="text-sm text-center text-gray-600 mt-4">
      Already have an account?
      <a href="/login" class="text-[#22664e] hover:underline font-medium">Login</a>
    </p>
  </div>
</div>

<%- include('./partials/footer') %>
