   <script>
 document.addEventListener('DOMContentLoaded', function() {
  const words = [
    {text: 'Anytime', steps: 7},
    {text: 'Anywhere', steps: 8}
  ];
  const el = document.querySelector('.typing-animation');
  let idx = 0;

  function typeWord() {
    const {text, steps} = words[idx];
    el.textContent = text;
    el.style.setProperty('--ch', `${text.length}ch`);
    el.style.setProperty('--steps', steps);
    el.style.width = '0';
    el.style.animation = 'none';
    void el.offsetWidth; // reflow
    el.style.animation = `typing 1.5s steps(${steps}, end) forwards, blink 0.7s step-end infinite`;
    setTimeout(() => {
      // After typing, set width to auto so the full word is visible
      el.style.width = 'auto';
      setTimeout(() => {
        el.style.animation = 'none';
        el.textContent = '';
        el.style.width = '0';
        setTimeout(() => {
          idx = (idx + 1) % words.length;
          typeWord();
        }, 400);
      }, 1000); // pause after typing
    }, 1500); // typing duration
  }
  typeWord();
});
 </script>
