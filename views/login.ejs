<%- include('partials/header') %>

<div class="min-h-screen grid grid-cols-1 md:grid-cols-2 bg-gray-100">
  <!-- Left Side: Image / Branding -->
  <div class="flex items-center justify-center bg-[#22664e] p-6">
    <img src="/images/login.gif" alt="Login Illustration" class="w-[80%] max-w-md">
  </div>

  <!-- Right Side: Login Form -->
  <div class="flex items-center justify-center p-8">
    <div class="w-full max-w-md bg-white p-8 rounded-lg shadow-lg">
      <h2 class="text-3xl font-bold text-center text-[#22664e] mb-6">Welcome Back</h2>

      <form id="loginForm" action="/login" method="POST" class="space-y-5">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
          <input 
            type="email" 
            name="email" 
            required 
            class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#22664e]" />
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Password</label>
          <input 
            type="password" 
            name="password" 
            required 
            class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#22664e]" />
        </div>

        <button 
          id="submitBtn"
          type="submit" 
          class="w-full bg-[#22664e] text-white py-2 rounded-md hover:bg-green-700 transition">
          Login
        </button>

        <!-- Loader -->
        <div id="loader" class="hidden flex justify-center mt-4">
          <div class="w-6 h-6 border-4 border-[#22664e] border-t-transparent rounded-full animate-spin"></div>
        </div>
      </form>

      <p class="text-sm text-center text-gray-600 mt-5">
        Don't have an account? 
        <a href="/register" class="text-[#22664e] font-medium hover:underline">Register</a>
      </p>
    </div>
  </div>
</div>

<script>
  const form = document.getElementById('loginForm');
  const loader = document.getElementById('loader');
  const submitBtn = document.getElementById('submitBtn');

  form.addEventListener('submit', () => {
    loader.classList.remove('hidden');
    submitBtn.disabled = true;
    submitBtn.textContent = 'Logging in...';
  });
</script>

