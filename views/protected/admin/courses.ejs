<%- include('../../partials/header') %>
<section class="min-h-screen bg-gray-100 py-10 px-6">
  <div class="max-w-5xl mx-auto">
    <h1 class="text-2xl font-bold mb-6 text-green-700">All Courses</h1>
    <table class="w-full bg-white rounded shadow text-sm">
      <thead class="bg-green-700 text-white">
        <tr>
          <th class="px-4 py-2 text-left">Title</th>
          <th class="px-4 py-2 text-left">Instructor</th>
          <th class="px-4 py-2 text-left">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% courses.forEach(course => { %>
          <tr class="border-b">
            <td class="px-4 py-2"><%= course.title %></td>
            <td class="px-4 py-2"><%= course.createdBy?.name || 'Unknown' %></td>
            <td class="px-4 py-2">
              <form action="/admin/courses/<%= course._id %>/delete" method="POST">
                <button class="text-red-500 hover:underline">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</section>
<%- include('../../partials/footer') %>
