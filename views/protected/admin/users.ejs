<%- include('../../partials/header') %>
<section class="min-h-screen bg-gray-100 py-10 px-6">
  <div class="max-w-5xl mx-auto">
    <h1 class="text-2xl font-bold mb-6 text-[#22664e]"><i class="fa fa-user"> </i>  All Users</h1>
    <table class="w-full bg-white rounded text-sm shadow-md shadow-[#22664e13]">
      <thead class="bg-[#22664e] text-white py-4 rounded-t-3xl rounded">
        <tr>
          <th class="px-4 py-4 text-left">Name</th>
          <th class="px-4 py-4 text-left">Email</th>
          <th class="px-4 py-4 text-left">Role</th>
          <th class="px-4 py-4 text-left">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach(user => { %>
          <tr class="rounded-b-4xl py-3">
            <td class="px-4 py-4"><%= user.name %></td>
            <td class="px-4 py-4"><%= user.email %></td>
            <td class="px-4 py-4"><%= user.role %></td>
            <td class="px-4 py-4">
              <% if (user.role !== 'admin') { %>
                <form action="/admin/users/<%= user._id %>/delete" method="POST">
                  <button class="bg-red-600 py-3  px-6 hover:bg-red-500">Delete</button>
                </form>
              <% } %>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</section>
<%- include('../../partials/footer') %>