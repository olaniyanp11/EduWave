<%- include('../../partials/header') %>

<div class="max-w-2xl mx-auto mt-10 p-6 bg-white shadow rounded">
  <h2 class="text-2xl font-bold mb-4">Upload Lesson for <%= course.title %></h2>

  <form action="/instructor/courses/<%= course._id %>/lessons/upload" method="POST" enctype="multipart/form-data" class="space-y-4">
    <div>
      <label class="block font-semibold">Lesson Title</label>
      <input type="text" name="title" required class="w-full px-4 py-2 border rounded" />
    </div>

    <div>
      <label class="block font-semibold">Lesson Content</label>
      <textarea name="content" rows="5" class="w-full px-4 py-2 border rounded"></textarea>
    </div>

    <div>
      <label class="block font-semibold">Upload Video (.mp4, .webm, etc)</label>
      <input type="file" name="video" accept="video/*" class="w-full" />
    </div>

    <button type="submit" class="bg-green-600 text-white px-4 py-2 rounded">Upload Lesson</button>
  </form>
</div>

<%- include('../../partials/footer') %>
