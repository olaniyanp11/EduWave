<%- include('../../partials/header') %>

<div class="max-w-4xl mx-auto mt-10 p-6 bg-white shadow rounded">
  <h2 class="text-2xl font-bold mb-6">Lessons for <%= course.title %></h2>

  <a href="/instructor/courses/<%= course._id %>/lessons/upload"
     class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 mb-4 inline-block">Upload New Lesson</a>

  <% if (lessons.length === 0) { %>
    <p>No lessons yet.</p>
  <% } else { %>
    <ul class="space-y-4">
      <% lessons.forEach(lesson => { %>
        <li class="border p-4 rounded">
          <h3 class="text-xl font-semibold"><%= lesson.title %></h3>
          <% if (lesson.videoUrl) { %>
            <p class="text-sm text-blue-600"><a href="<%= lesson.videoUrl %>" target="_blank">Watch Video</a></p>
          <% } %>
          <p class="text-sm text-gray-500">Created: <%= lesson.createdAt.toDateString() %></p>
        </li>
      <% }) %>
    </ul>
  <% } %>
</div>

<%- include('../../partials/footer') %>
