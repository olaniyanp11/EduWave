<%- include('../../partials/header') %>

<div class="max-w-5xl mx-auto mt-10 px-4">
  <h1 class="text-2xl font-bold mb-4">My Created Courses</h1>

  <% if (courses.length === 0) { %>
  <p class="text-gray-600">You haven't created any courses yet. <a href="/instructor/create-course" class="text-green-600 underline">Create one now</a>.</p>
  <% } else { %>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <% courses.forEach(course => { %>
    <div class="bg-white shadow-md rounded-lg p-6">
      <h2 class="text-xl font-semibold mb-2"><%= course.title %></h2>
      <p class="text-gray-600 mb-3"><%= course.description || 'No description provided.' %></p>
      <p class="text-sm text-gray-400">Created: <%= course.createdAt.toDateString() %></p>
      <div class="mt-4 flex gap-4">
        <a href="/instructor/courses/<%= course._id %>/lessons" class="text-blue-600 hover:underline">Manage Lessons</a>
        <a href="/instructor/courses/<%= course._id %>/edit" class="text-yellow-600 hover:underline">Edit</a>
        <form action="/instructor/courses/<%= course._id %>/delete" method="POST" onsubmit="return confirm('Are you sure?')" class="inline">
          <button type="submit" class="text-red-600 hover:underline">Delete</button>
        </form>
      </div>

    </div>
    <% }) %>
  </div>
  <% } %>
</div>

<%- include('../../partials/footer') %>