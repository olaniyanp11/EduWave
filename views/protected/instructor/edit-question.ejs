<%- include('../../partials/header') %>

<section class="max-w-2xl mx-auto bg-white p-6 shadow my-10 rounded">
  <h1 class="text-xl font-bold mb-4 text-green-700">Edit Question</h1>

  <form action="/instructor/questions/<%= question._id %>/edit" method="POST" class="space-y-4">
    <div>
      <label class="block font-semibold">Question Text</label>
      <textarea name="questionText" rows="3" class="w-full border rounded px-3 py-2" required><%= question.questionText %></textarea>
    </div>

    <div>
      <label class="block font-semibold">Options</label>
      <% question.options.forEach((opt, i) => { %>
        <input type="text" name="options" value="<%= opt %>" class="w-full mb-2 border px-3 py-2 rounded" required />
      <% }) %>
    </div>

    <div>
      <label class="block font-semibold">Correct Option (Index)</label>
      <select name="correctAnswerIndex" class="w-full border px-3 py-2 rounded">
        <% question.options.forEach((_, i) => { %>
          <option value="<%= i %>" <%= question.correctAnswerIndex === i ? 'selected' : '' %>>
            Option <%= i + 1 %>
          </option>
        <% }) %>
      </select>
    </div>

    <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded">Save</button>
  </form>
</section>

<%- include('../../partials/footer') %>
