<%- include('../../partials/header') %>

<section class="min-h-screen bg-gray-100 py-10 px-6">
  <div class="max-w-4xl mx-auto">
    <h1 class="text-2xl font-bold mb-6 text-[#22664e]">Quiz Scores</h1>

    <% if (results.length === 0) { %>
      <p class="text-gray-600">No quizzes attempted yet.</p>
    <% } else { %>
      <ul class="space-y-4">
        <% results.forEach(result => { %>
          <li class="bg-white p-4 rounded shadow flex justify-between items-center">
            <div>
              <h2 class="font-semibold"><%= result.lesson?.title || 'Lesson' %></h2>
              <p class="text-gray-600 text-sm">
                Score: <%= result.score %> / <%= result.totalQuestions %>
              </p>
            </div>
            <span class="text-green-700 font-bold">
              <%= Math.round((result.score / result.totalQuestions) * 100) %>%
            </span>
          </li>
        <% }) %>
      </ul>
    <% } %>
  </div>
</section>

<%- include('../../partials/footer') %>
