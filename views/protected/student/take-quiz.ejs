<%- include('../../partials/header') %>

<section class="min-h-screen bg-gray-100 py-10 px-6">
  <div class="max-w-4xl mx-auto bg-white rounded shadow p-6">
    <h1 class="text-2xl font-bold mb-6 text-[#22664e]">Quiz: <%= quiz.title %></h1>
<form action="/student/lessons/<%= quiz.lesson %>/quiz" method="POST" class="space-y-6">
  <% questions.forEach((q, index) => { %>
    <div class="bg-gray-100 p-4 rounded shadow">
      <h3 class="font-bold mb-2"><%= index + 1 %>. <%= q.questionText %></h3>
      <% q.options.forEach((opt, optIndex) => { %>
        <div>
          <label>
            <input type="radio" name="q<%= index %>" value="<%= optIndex %>" required>
            <%= opt %>
          </label>
        </div>
      <% }) %>
    </div>
  <% }) %>

  <button type="submit" class="bg-green-600 text-white px-4 py-2 rounded">Submit Quiz</button>
</form>

  </div>
</section>

<%- include('../../partials/footer') %>
