<%- include('../../partials/header') %>

<section class="min-h-screen bg-gray-100 py-10 px-6">
  <div class="max-w-6xl mx-auto">
    <h1 class="text-3xl font-bold mb-6 text-green-700 flex items-center gap-2">
      <i class="fas fa-book-reader"></i> My Courses
    </h1>

    <% if (courses.length === 0) { %>
      <p class="text-gray-600">You are not enrolled in any courses yet. <a href="/student/explore" class="text-green-600 underline">Explore Courses</a></p>
    <% } else { %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% courses.forEach(course => { %>
          <div class="bg-white rounded shadow p-4">
            <h2 class="text-xl font-semibold text-[#22664e]"><%= course.title %></h2>
            <p class="text-sm text-gray-600 mb-2"><%= course.description %></p>
            <p class="text-xs text-gray-500">Instructor: <%= course.createdBy?.name || "Unknown" %></p>
            <a href="/student/courses/<%= course._id %>/lessons" class="inline-block mt-3 text-sm bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700">View Lessons</a>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>
</section>

<%- include('../../partials/footer') %>
